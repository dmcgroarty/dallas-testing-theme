<link rel="stylesheet" href="{{ 'testing.css' | asset_url }}" media="print" onload="this.media='all'">

{% assign test_array = "1,2,3,4,5" | split: ',' %}

{% for num in test_array %}

{% assign remainder = num | modulo: 2 %}

{% if remainder == 0 %}
    <h3>The number is {{ num }}, and is even</h3>
{% else %}
    <h3>The number is {{ num }}, and is odd</h3>
{% endif %}

{% if num == '3' %}
    <h3>There was a 3</h3>
{% endif %}

{% endfor %}

{% for product in collections['all'].products %}
   {% if section.settings.hide_product == false %}
    <a class="product_link" href="{{ product.url }}" >
        {{ product.title }} - 
        {{ product.price | money }} 
    {% if product.available == false %}
        - Product Not Available!
    {% endif %}
    </a>
	{% endif %}
{% endfor %}

{% schema %}
{
    "name": "example",
    "settings": [
      {
        "type": "checkbox",
        "id": "hide_product",
        "label": "Show / Hide Products"
      }
    ]
}
{% endschema %}